@model AgustosMarket.ViewModels.HomeViewModels
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="row">
    <div class="col-md-4 col-lg-3">
        @*SÜTUN 1 BAŞLANGIÇ*@
        <h3 class="mt-3">Kategoriler</h3>
        <div class="list-group">
            <a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Index">
                Tümü
            </a>
            @foreach (Kategori kategori in Model.Kategoriler)
            {
                <a class="list-group-item list-group-item-action" asp-controller="Home"
                   asp-action="Index" asp-route-kid="@kategori.Id">
                    @kategori.KategoriAd
                </a>
            }
        </div>
    </div>
    <br />  
    @*SÜTUN 1 BİTİŞ*@

    <div class="col-md-8 col-lg-9">
        @*SÜTUN 2 BAŞLANGIÇ*@
        <h3 class="mt-3">Ürünler</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ürün Adı</th>
                    <th>Birim Fiyatı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var urun in Model.Urunler)
                {
                    <tr>
                        <td>@urun.Id</td>
                        <td>@urun.UrunAd</td>
                        <td>@urun.BirimFiyat.ToString("n2")</td>
                    </tr>
                }
            </tbody>
        </table>
        @*SÜTUN 2 BİTİŞ*@
    </div>
</div>

